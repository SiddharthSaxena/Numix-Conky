#====================================
#   Conky Settings
#====================================
background no
update_interval 1
double_buffer yes
no_buffers yes
imlib_cache_size 10

draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_graph_size 26 80
show_graph_scale no
show_graph_range no


#====================================
#   Window Specifications
#====================================

gap_x 1060
gap_y 90
minimum_size 268 620
maximum_width 268
own_window yes
own_window_type dock  # other options are: override/normal/desktop/panel
own_window_transparent yes
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
alignment top_right
own_window_argb_visual no
own_window_argb_value 180

#====================================
#   Text Settings
#====================================
use_xft yes
xftalpha 0
xftfont Droid Sans:size=8
text_buffer_size 256
override_utf8_locale yes

short_units yes
short_units yes
pad_percents 2
top_name_width 7


#====================================
#   Color Scheme
#====================================
default_color DCDCDC
color1 DCDCDC
color2 FFFFFF
color3 2D2D2D
color4 FFFF00

#====================================
#   API Key
#====================================
template6 ""


#====================================
#   City ID
#====================================
template7 ""


#====================================
#   Temp Unit (default, metric, imperial)
#====================================
template8 metric


#====================================
#   Locale (e.g. "es_ES.UTF-8")
#   Leave empty for default
#   Leave the quotes
#====================================
template9 ""


###################################################
###################################################


